                                 Width="98"
                                 Height="23"
                                 Margin="7,7,0,0"
                                 HorizontalAlignment="Left"
                                 VerticalAlignment="Top" />
                        <Button Name="button_SearchCWord"
                                Width="52"
                                Height="23"
                                Margin="110,7,0,0"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Top"
                                Click="button_SearchCWord_Click"
                                Content="Search" />
                        <Label Name="label1"
                               Width="71"
                               Height="28"
                               Margin="174,9,0,0"
                               HorizontalAlignment="Left"
                               VerticalAlignment="Top"
                               Content="Pivot word : " />
                        <Label Name="label_LinkedCWordCount"
                               Width="105"
                               Height="28"
                               Margin="251,9,0,0"
                               HorizontalAlignment="Left"
                               VerticalAlignment="Top"
                               Content="-" />
                        <ListBox Name="listBox1"
                                 Width="316"
                                 Margin="362,36,0,35"
                                 HorizontalAlignment="Left"
                                 VerticalAlignment="Stretch" />
                        <Button Name="buttonNaiveCombination"
                                Width="143"
                                Height="23"
                                Margin="685,0,0,107"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Bottom"
                                Click="buttonNaiveCombination_Click"
                                Content="Naive Combination" />
                        <!--Button Name="button1"
                                Width="143"
                                Height="23"
                                Margin="685,0,0,107"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Bottom"
                                Click="button1_Click"
